  <van-cell-group>
    <van-field value="{{ mens }}" clearable label="入会时间" placeholder="2020-04-21 15:53:44" />
  </van-cell-group> 
  <button bindtap="wod" style=" width: 80%;background-color: #a6c393;  border-radius: 25px;margin-top: 50px">保存</button>
</view>