<view class="cu-form-group">
  <van-cell-group>
    <van-field  clearable label="昵称" placeholder="{{nic}}"bind:blur="nic" />
  </van-cell-group>
  <van-cell-group>
    <van-field value="{{ tels }}" clearable label="手机号" placeholder="15690605195" />
  </van-cell-group>
  <!-- 性别 -->
   <view class="xing">
    <view style="font-size:14px;padding-right: 6%">性别</view>
    <view class="button">
      <van-button size="mini" type="default" color='{{col}}' bind:click='xian'>先生</van-button>
    </view>
    <view>
      <van-button size="mini" type="default" color='{{coln}}' bind:click='nv'>女士</van-button>
